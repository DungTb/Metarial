
@{
    ViewBag.Title = "Index";
}
@model DemoASP.Areas.Admin.Models.LoginModel
@section Header{
    Thong Tin Dang Nhap
}
<!doctype html>
<html class="no-js">
<head>
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Veneto Admin &middot; Sign In </title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
    <!--<link rel="shortcut icon" href="/favicon.ico">-->
    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
    <link rel="stylesheet" href="/Assets/Admin/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Assets/Admin/dist/css/veneto-admin.min.css">
    <link rel="stylesheet" href="/Assets/Admin/demo/css/demo.css">
    <link rel="stylesheet" href="/Assets/Admin/dist/assets/font-awesome/css/font-awesome.css">


    <!--[if lt IE 9]>
    <script src="dist/assets/libs/html5shiv/html5shiv.min.js"></script>
    <script src="dist/assets/libs/respond/respond.min.js"></script>
    <![endif]-->

</head>
<body class="body-sign-in">
    <div class="container">
        <div class="panel panel-default form-container">
            <div class="panel-body">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" });
                <form role="form">
                    <h3 class="text-center margin-xl-bottom">Welcome Back!</h3>

                    <div class="form-group text-center">
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Name" })
                    </div>
                    <div class="form-group text-center">
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control" })

                    </div>
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(model => model.RememberMe)
                            Remember Me
                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block btn-lg">SIGN IN</button>
                </form>
                }
            </div>
            <div class="panel-body text-center">
                <div class="margin-bottom">
                    <a class="text-muted text-underline" href="javascript:;">Forgot Password?</a>
                </div>
                <div>
                    Don't have an account? <a class="text-primary-dark" href="pages-sign-up.html">Sign up here</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

