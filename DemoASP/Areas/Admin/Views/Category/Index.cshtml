@model IEnumerable<Model.ModelView.ModelCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Header{
    <div class="page-heading page-heading-md">
        <h2 class="header__main">
            <span class="breadcrumb">
                <i class="fa fa-credit-card"></i>
            </span>
            <span class="title">Danh Mục Sản Phẩm </span>
        </h2>


    </div>
}

<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">Tất Cả Danh Mục Sản Phẩm </h4>
        </div>


      
            <form class="form-inline" role="form">
                 <button type="submit" class="btn btn-primary"> Tìm Kiếm</button>
                 <input type="text"  class="form-control" id="exampleInputPassword2" placeholder="Nhập từ khóa tìm kiếm...">
         
            </form>
                
          

        </div>


    </div>




    <div class="panel-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="select select-all not-select">
                        <span><input type="checkbox" class="js-no-dirty all-bulk-action" bind-event-change="addOrRemoveAllBulkActionItems(this)"></span>
                    </th>
                    <th>Danh Mục</th>
                    <th>Mô Tả</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="select">
                            <input type="checkbox" bind-event-change="addOrRemoveBulkActionItem(102526,this)" class="bulk-action-item">
                        </td>
                        <td><a href="#">@item.Name</a></td>
                        <td>@item.Description</td>
                       
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>
