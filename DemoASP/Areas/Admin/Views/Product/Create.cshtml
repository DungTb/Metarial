    <script src="/Scripts1/jquery-ui-1.11.4.min.js"></script>
    <script src="/Scripts1/jquery.multiuploader.crop.js"></script>
    <script>
		$(document).ready(function() {
			$('#myUploader').imageUploaderCut({
				proceedCallBack: uploadCallBack
				});
